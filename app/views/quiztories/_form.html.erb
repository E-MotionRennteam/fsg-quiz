<%= simple_form_for quiztory, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  
  <%= f.association :quiz, as: :radio_buttons, collection: @quiz_collection, label_method: :quiz_attributes, value_method: :id, checked: Quiz.first.id %>
  <%= if !(@available_users.blank?) then (f.association :users, collection: @available_users, label_method: :email, include_blank: false) 
	else (f.association :users, collection: @available_users, label_method: :email, include_blank: false || "Currently no user available")
  end%>
  
  <%= f.button :submit, "Start!" %>
<% end %>
